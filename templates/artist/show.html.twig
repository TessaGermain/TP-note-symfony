{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ artist.birthdate ? artist.birthdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ artist.photo }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ artist.biography }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('all-artists') }}">back to list</a>

    <a href="{{ path('artist-edit', {'id': artist.id}) }}">edit</a>

    {{ include('artist/_delete_form.html.twig') }}
{% endblock %}
