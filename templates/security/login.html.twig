{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post" class="flex flex-col gap-4 items-center">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="my-3 text-teal-700 text-2xl text-center font-bold">Connexion</h1>
        <div class="bg-cyan-100 border-2 rounded-lg border-teal-700 p-6 w-1/2 mx-auto my-3 flex flex-col gap-3">
            <div>
                <label class="text-teal-700 font-semibold" for="username">Email: </label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div>
                <label  class="text-teal-700 font-semibold"  for="password">Mot de passe: </label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        <button class="bg-green-100 border-2 border-green-800 py-2 px-4 rounded-lg font-bold text-green-800" type="submit">
            SE CONNECTER
        </button>
    </form>
{% endblock %}
