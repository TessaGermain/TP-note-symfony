{% block form %}
    <form class="flex flex-col gap-4 items-center" {{ form_start(form) }}
        <div class="bg-cyan-100 border-2 rounded-lg border-teal-700 p-6 w-1/2 mx-auto my-3">
            <div class="form-group">
                <label for="{{ form.name.vars.id }}" class="form-label mr-3 text-teal-700 font-semibold">Nom: </label>
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="bg-green-100 border-2 border-green-800 py-2 px-4 rounded-lg font-bold text-green-800">
                {{ button_label|default('Ajouter')|upper }}
            </button>
        </div>
    </form>
{% endblock %}
