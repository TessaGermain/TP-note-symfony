{% extends 'base.html.twig' %} 
{% block title %}Tous les genres{% endblock %} 
{% block body %}
<h1 class="text-center text-2xl font-extrabold my-5">Tous les genres</h1>
<div class="grid grid-cols-5 gap-4 px-6">
  {% for genre in genres %}
  <div
    class="p-8 rounded-lg bg-cyan-200/50 border-2 border-teal-700 relative flex justify-center items-center gap-4 flex-col"
  >
    <div class="absolute top-2 right-2 flex gap-1">
      <a
        href="{{ path('genre-edit', {'id': genre.id}) }}"
        class="p-1 rounded-md bg-green-400"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-4 text-green-900"
        >
          <path
            d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-12.15 12.15a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32L19.513 8.2Z"
          />
        </svg>
      </a>
      <a
        href="{{ path('genre-delete', {'id': genre.id}) }}"
        class="p-1 rounded-md bg-red-400"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-4 text-red-900"
        >
          <path
            fill-rule="evenodd"
            d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
    </div>
    <h2 class="text-2xl font-bold text-teal-700">{{genre.name}}</h2>
    <div class="flex flex-col gap-1">
      <span class="text-sm text-teal-700">{{genre.albums|length}} albums Â· {{genre.getSongsCount()}} chansons</span>
      <a
        class="text-teal-500 underline text-center font-bold"
        href="{{ path('genre-show', {'id': genre.id}) }}"
        >Voir</a
      >
    </div>
  </div>
  {% else %}
  <span>Aucun genre</span>
  {% endfor %} 
</div>
{% endblock %}
